<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.2.0</version>
    <relativePath></relativePath>
  </parent>
  <groupId>org.agoncal.application</groupId>
  <artifactId>petstoreee6</artifactId>
  <version>1.0</version>
  <packaging>war</packaging>
  <name>Petstore application using Java EE 6</name>
  <properties>
    <version.arquillian>1.8.0.Final</version.arquillian>
    <version.junit>5.10.0</version.junit>
    <version.mockito>5.4.0</version.mockito>
    <version.bootstrap>5.3.0</version.bootstrap>
    <version.maven.war.plugin>3.4.0</version.maven.war.plugin>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <version.maven.failsafe.plugin>3.1.2</version.maven.failsafe.plugin>
    <version.derby>10.16.1.1</version.derby>
    <version.jakarta.ee>10.0.0</version.jakarta.ee>
    <version.jquery>3.6.4</version.jquery>
    <version.java>17</version.java>
    <version.arquillian.container.jboss>7.1.3.Final</version.arquillian.container.jboss>
    <version.maven.surefire.plugin>3.1.2</version.maven.surefire.plugin>
    <version.maven.compiler.plugin>3.13.0</version.maven.compiler.plugin>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.arquillian.container.glassfish>1.0.2</version.arquillian.container.glassfish>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.arquillian</groupId>
        <artifactId>arquillian-bom</artifactId>
        <version>${version.arquillian}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <dependencies>
    <dependency>
      <groupId>jakarta.platform</groupId>
      <artifactId>jakarta.jakartaee-api</artifactId>
      <version>${version.jakarta.ee}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>${version.mockito}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>${version.junit}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.arquillian.junit5</groupId>
      <artifactId>arquillian-junit5-container</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>jquery</artifactId>
      <version>${version.jquery}</version>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>bootstrap</artifactId>
      <version>${version.bootstrap}</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>applicationPetstore</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${version.maven.compiler.plugin}</version>
        <dependencies>
          <dependency>
            <groupId>maven-compile.mockito</groupId>
            <artifactId>maven-compile-core</artifactId>
            <version>${version.maven-compile}</version>
          </dependency>
          <dependency>
            <groupId>maven-compile.jupiter</groupId>
            <artifactId>maven-compile-jupiter</artifactId>
            <version>${version.maven-compile2}</version>
            <scope>test</scope>
          </dependency>
        </dependencies>
        <inherited>true</inherited>
        <configuration>
          <source>${version.java}</source>
          <target>${version.java}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${version.maven.surefire.plugin}</version>
        <configuration>
          <argLine>${surefire.argLine}</argLine>
          <excludes>
            <exclude>**/*IT.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>${version.maven.failsafe.plugin}</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <argLine>${it.surefire.argLine}</argLine>
          <includes>
            <include>**/*IT.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.tomee.maven</groupId>
        <artifactId>tomee-maven-plugin</artifactId>
        <version>11.1.2</version>
        <configuration>
          <tomeeClassifier>jakartaee10</tomeeClassifier>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jakarta-ee</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <version.jakarta.ee>10.1.2</version.jakarta.ee>
        <version.arquillian.ee>10.9.8</version.arquillian.ee>
      </properties>
      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>org.jboss.arquillian</groupId>
            <artifactId>arquillian-bom</artifactId>
            <version>${version.arquillian.ee}</version>
            <type>pom</type>
            <scope>import</scope>
          </dependency>
        </dependencies>
      </dependencyManagement>
      <dependencies>
        <dependency>
          <groupId>org.apache.derby</groupId>
          <artifactId>derby</artifactId>
          <version>${version.derby}</version>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>jacoco</id>
      <activation />
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.10</version>
            <executions>
              <execution>
                <id>test</id>
                <phase>initialize</phase>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
                <configuration>
                  <propertyName>surefire.argLine</propertyName>
                  <destFile>${jacoco.destFile}</destFile>
                </configuration>
              </execution>
              <execution>
                <id>integration-test</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
                <configuration>
                  <propertyName>it.surefire.argLine</propertyName>
                  <destFile>${it.jacoco.destFile}</destFile>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <properties>
        <it.jacoco.destFile>${project.build.directory}/jacocoit.exec</it.jacoco.destFile>
        <sonar.jacoco.itReportPath>${it.jacoco.destFile}</sonar.jacoco.itReportPath>
        <sonar.jacoco.reportPath>${jacoco.destFile}</sonar.jacoco.reportPath>
        <jacoco.destFile>${project.build.directory}/jacoco.exec</jacoco.destFile>
      </properties>
    </profile>
  </profiles>
</project>
